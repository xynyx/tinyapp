<!-- _ signifies header partial -->
<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>

      <% if (user) {%>
        <div class="ml-auto">
          <span>Logged In As: <%=user.email%></span>
          <form id="logout" method="POST" action="/logout" style="font-size: 1.05em">
          </form>
        </div>
        <div>
          <button class="btn btn-outline-dark" form="logout" style="margin-left: 0.7em">Logout</button>
        </div>
        <% } else {%>
        <div class="navbar-nav ml-auto">
          <a class="text-center nav-item nav-link" href="/register">Register</a>
          <a class="text-right nav-item nav-link" href="/login">Login</a>
        </div>
      <% } %>
    </div>

  </nav>
</header>